<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0">

    <name id="warp">org_arquillian_warp</name>

    <distributable />

    <ordering>
        <before>
            <others />
            <name>com_ocpsoft_rewrite</name>
        </before>
    </ordering>

    <filter>
        <filter-name>WarpFilter</filter-name>
        <filter-class>org.jboss.arquillian.warp.impl.server.execution.WarpFilter</filter-class>
        <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
        <filter-name>WarpFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ASYNC</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

</web-fragment>
